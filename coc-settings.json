{
  "go.tags": {
    "transform": "pascalcase"
  },
  "go.goplsPath": "~/go/bin/gopls",
  "vetur.format.options.tabSize": 4,
  "vetur.format.defaultFormatter.html": "prettyhtml",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod"
      ],
      "enable": false,
      "filetypes": [
        "go"
      ]
    },
    "bash": {
      "command": "bash-language-server",
      "enable": false,
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ]
    },
    "efm": {
      "command": "efm-langserver",
      "initializationOptions": {
        "documentFormatting": true,
        "hover": true,
        "documentSymbol": true,
        "codeAction": true,
        "completion": true
      },
      "args": [],
      "filetypes": [
        "vim",
        "yaml",
        "markdown"
      ]
    },
    "sql": {
      "command": "sql-language-server",
      "args": [
        "up",
        "--method",
        "stdio"
      ],
      "filetypes": [
        "sql",
        "mysql"
      ]
    }
  }
}
